<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".activity.SendActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="16dp" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="34dp"
        app:rowCount="6"
        app:columnCount="3">
        <!--6行3列 实现占满整个屏幕-->


        <!--跨四列 自动填充 权重2-->
        <Button
            android:id="@+id/freq_1"
            android:text="型号/频率1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp" />
        //列 行权重为1
        <Button
            android:id="@+id/freq_2"
            android:text="型号/频率2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_3"
            android:text="型号/频率3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_4"
            android:text="型号/频率4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/freq_5"
            android:text="型号/频率5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_6"
            android:text="型号/频率6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_7"
            android:text="型号/频率7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_8"
            android:text="型号/频率8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_9"
            android:text="型号/频率9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_10"
            android:text="型号/频率10"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_11"
            android:text="型号/频率11"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_12"
            android:text="型号/频率12"
            app:layout_rowSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_13"
            android:text="型号/频率13"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="20dp"/>
        //列 行权重为1
        <Button
            android:id="@+id/freq_14"
            android:text="型号/频率14"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_columnSpan="1"
            android:textSize="20dp"/>
        //列 行权重为1

        <Button
            android:id="@+id/freq_15"
            android:text="型号/频率15"
            android:textSize="20dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/freq_16"
            android:text="型号/频率16"
            android:textSize="20dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_rowSpan="2"
            app:layout_gravity="fill_vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="2">

            <com.chogge.speaker.view.Knob
                android:id="@+id/knob_left"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/icon_radio_bg"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:kBorderWidth="0.0dip"
                app:kCircularIndicatorColor="@android:color/holo_red_dark"
                app:kCircularIndicatorRelativePosition="0.55"
                app:kCircularIndicatorRelativeRadius="0.03"
                app:kDefaultState="10"
                app:kFreeRotation="false"
                app:kIndicatorWidth="0.0dip"
                app:kKnobDrawable="@drawable/radio_button"
                app:kKnobDrawableRotates="true"
                app:kMaxAngle="120.0"
                app:kMinAngle="-120.0"
                app:kNumberOfStates="9"
                app:kSelectedStateMarkerColor="@android:color/holo_red_dark"
                app:kSelectedStateMarkerContinuous="false"
                app:kStateMarkersAccentColor="@android:color/white"
                app:kStateMarkersAccentPeriodicity="5"
                app:kStateMarkersAccentRelativeLength="0.09"
                app:kStateMarkersAccentWidth="2.0dip"
                app:kStateMarkersColor="@android:color/white"
                app:kStateMarkersRelativeLength="0.08"
                app:kStateMarkersWidth="1.0dip"
                app:kSwipeSensitivityPixels="15" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/knob_left"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="40dp"
                android:text="频率"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </RelativeLayout>
        //列 行权重为1

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_rowSpan="2"
            app:layout_gravity="fill_vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="2">

            <com.chogge.speaker.view.Knob
                android:id="@+id/knob_right"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_radio_bg"
                app:kBorderWidth="0.0dip"
                app:kCircularIndicatorColor="@android:color/holo_red_dark"
                app:kCircularIndicatorRelativePosition="0.55"
                app:kCircularIndicatorRelativeRadius="0.03"
                app:kDefaultState="10"
                app:kFreeRotation="false"
                app:kIndicatorWidth="0.0dip"
                app:kKnobDrawable="@drawable/radio_button"
                app:kKnobDrawableRotates="true"
                app:kMaxAngle="120.0"
                app:kMinAngle="-120.0"
                app:kNumberOfStates="9"
                app:kSelectedStateMarkerColor="@android:color/holo_red_dark"
                app:kSelectedStateMarkerContinuous="false"
                app:kStateMarkersAccentColor="@android:color/white"
                app:kStateMarkersAccentPeriodicity="5"
                app:kStateMarkersAccentRelativeLength="0.09"
                app:kStateMarkersAccentWidth="2.0dip"
                app:kStateMarkersColor="@android:color/white"
                app:kStateMarkersRelativeLength="0.08"
                app:kStateMarkersWidth="1.0dip"
                app:kSwipeSensitivityPixels="15" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/knob_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="40dp"
                android:text="电压"
                android:textColor="@color/white"
                android:textSize="22dp" />

        </RelativeLayout>

    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>