<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|top"
    android:rotation="90">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wave Type : "
            android:textColor="#ff3f51b5"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Square"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="Triangular"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="Sine"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency(hz) : "
            android:textColor="#ff3f51b5"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/frequency"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:text="400"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration(ms) : "
            android:textColor="#ff3f51b5"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/duration"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:text="100"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interval factor(1-10) : "
            android:textColor="#ff3f51b5"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/interval_factor"
            android:layout_width="50.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:text="5"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate factor(1-10) : "
            android:textColor="#ff3f51b5"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rotate_fator"
            android:layout_width="50.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:text="5"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Cancel"
            android:textSize="18sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>